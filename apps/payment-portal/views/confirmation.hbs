<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm {{#if (eq payment.status 'Completed')}}border-success{{else}}border-danger{{/if}}">
            <div class="card-header {{#if (eq payment.status 'Completed')}}bg-success{{else}}bg-danger{{/if}} text-white">
                <h4 class="mb-0">{{title}}</h4>
            </div>
            <div class="card-body">
                {{#if payment}}
                    {{#if (eq payment.status 'Completed')}}
                        <div class="alert alert-success" role="alert">
                            <h5 class="alert-heading">Payment Successful!</h5>
                            <p>Thank you, {{payment.cardHolderName}}. Your payment has been processed successfully.</p>
                        </div>
                        <h5>Transaction Details:</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Transaction ID:</strong> {{payment.transactionId}}</li>
                            <li class="list-group-item"><strong>Amount:</strong> {{formatCurrency payment.amount}} {{payment.currency}}</li>
                            <li class="list-group-item"><strong>Date:</strong> {{formatDate payment.createdAt}}</li>
                            <li class="list-group-item"><strong>Card Used:</strong> {{payment.cardNumber}}</li>
                            <li class="list-group-item"><strong>Email:</strong> {{payment.email}}</li>
                            {{#if payment.address}}
                            <li class="list-group-item"><strong>Billing Address:</strong> {{payment.address}}, {{payment.city}}, {{payment.zipCode}}, {{payment.country}}</li>
                            {{/if}}
                        </ul>
                    {{else}}
                        <div class="alert alert-danger" role="alert">
                            <h5 class="alert-heading">Payment Failed</h5>
                            <p>Unfortunately, your payment could not be processed.</p>
                            <p><strong>Reason:</strong> {{payment.reason}}</p>
                        </div>
                         <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Amount:</strong> {{formatCurrency payment.amount}}</li>
                            <li class="list-group-item"><strong>Date:</strong> {{formatDate payment.createdAt}}</li>
                             <li class="list-group-item"><strong>Email:</strong> {{payment.email}}</li>
                        </ul>
                    {{/if}}
                    <hr>
                    <a href="/" class="btn btn-primary mt-3">Make Another Payment</a>
                {{else}}
                    <p class="text-danger">No payment details found for this confirmation.</p>
                    <a href="/" class="btn btn-secondary mt-3">Go to Homepage</a>
                {{/if}}
            </div>
            <div class="card-footer text-muted text-center">
                <small>If you have any questions, please contact support.</small>
            </div>
        </div>
    </div>
</div>