<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">{{title}}</h4>
            </div>
            <div class="card-body">
                {{#if error}}
                    <div class="alert alert-danger" role="alert">
                        {{error}}
                    </div>
                {{/if}}
                <form action="/process-payment" method="POST">
                    <h5 class="mb-3">Payment Details</h5>
                    <div class="form-group">
                        <label for="amount">Amount (USD)</label>
                        <input type="number" class="form-control" id="amount" name="amount" placeholder="Enter amount" required step="0.01" min="0.01" value="{{formData.amount}}">
                    </div>

                    <hr>
                    <h5 class="mb-3">Card Information</h5>
                     <div class="form-group">
                        <label for="cardHolderName">Cardholder Name</label>
                        <input type="text" class="form-control" id="cardHolderName" name="cardHolderName" placeholder="Full name as it appears on card" required value="{{formData.cardHolderName}}">
                    </div>
                    <div class="form-group">
                        <label for="cardNumber">Card Number</label>
                        <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="XXXX XXXX XXXX XXXX" required pattern="[0-9]{13,19}" title="Enter a valid card number" value="{{formData.cardNumber}}">
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label for="expiryDate">Expiry Date (MM/YY)</label>
                            <input type="text" class="form-control" id="expiryDate" name="expiryDate" placeholder="MM/YY" required pattern="^(0[1-9]|1[0-2])\/([0-9]{2})$" title="Enter date as MM/YY" value="{{formData.expiryDate}}">
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="cvv">CVV</label>
                            <input type="text" class="form-control" id="cvv" name="cvv" placeholder="CVV" required pattern="[0-9]{3,4}" title="Enter 3 or 4 digit CVV" value="{{formData.cvv}}">
                        </div>
                    </div>

                    <hr>
                    <h5 class="mb-3">Billing Information</h5>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="your.email@example.com" required value="{{formData.email}}">
                    </div>
                     <div class="form-group">
                        <label for="address">Street Address</label>
                        <input type="text" class="form-control" id="address" name="address" placeholder="1234 Main St" value="{{formData.address}}">
                    </div>
                    <div class="row">
                        <div class="col-md-5 form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control" id="city" name="city" placeholder="Anytown" value="{{formData.city}}">
                        </div>
                        <div class="col-md-4 form-group">
                            <label for="zipCode">Zip Code</label>
                            <input type="text" class="form-control" id="zipCode" name="zipCode" placeholder="12345" value="{{formData.zipCode}}">
                        </div>
                        <div class="col-md-3 form-group">
                            <label for="country">Country</label>
                            <input type="text" class="form-control" id="country" name="country" placeholder="USA" value="{{formData.country}}">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block mt-4">Pay Securely</button>
                </form>
            </div>
            <div class="card-footer text-muted text-center">
                <small>Your payment is processed securely.</small>
            </div>
        </div>
    </div>
</div>